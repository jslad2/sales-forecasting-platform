{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": { "runtime": "python3.12" }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "api/index.py" }
  ],
  "buildCommand": "pip install -r requirements-vercel.txt && gunicorn -b 0.0.0.0:8080 api.index:app"
}
